<% provide(:title, 'All users') %>
<h1>All Users</h1>

<%= will_paginate %>
<ul class="users">
	<% @users.each do |user| %>
		<li>
			<%= gravatar_for user, size: 52 %>
			<%= link_to user.name, user %>
			| <%= link_to "Delete", user, method: :delete,
					data: { confirm: "Are you sure?"} %>
			| <%= link_to "Update Settings", edit_user_path(user) %>
		</li>
	<% end %>
</ul>
<%= will_paginate %>