<h1>Checkout</h1>

<div class="row">
	<div class="span6 offset2">
		<%= form_tag(sf_order_index_path) do %>
		
			<p>Your Order Total is <strong><%= number_to_currency(@cart.total_price) %></strong></p>
		
			<%= label_tag "Customer_Name__c", "Name" %>
			<%= text_field_tag "Customer_Name__c", @order.Customer_Name__c %>
			
			<%= label_tag "Customer_Email__c", "Email" %>
			<%= text_field_tag "Customer_Email__c", @order.Customer_Email__c %>
			
			<%= label_tag "Customer_Address__c", "Address" %>
			<%= text_area_tag "Customer_Address__c", @order.Customer_Address__c, rows: 3 %>
			
			<%= label_tag "Comments__c", "Comments" %>
			<%= text_area_tag "Comments__c", @order.Comments__c, rows: 3 %>
			
			<%= submit_tag "Create Order", class: "btn btn-success" %>
		<% end %>
	</div>
</div>
	
	<table class="table table-hover">
		<tr>
			<th>Item Name</th>
			<th style="text-align: center;">Quantity</th>
			<th style="text-align: center;">Price</th>
			<th style="text-align: center;">Total</th>
		</tr>	
		
		<% @cart.cart_line_items.each do |item| %>

			<tr>
				<td><%= item.name %></td>
				
				<td style="text-align: center;">
					<%= item.quantity %> 
				</td>
				
				<td style="text-align: center;">
					<%= number_to_currency(item.price) %></td>
				<td style="text-align: center;">
					<%= number_to_currency(item.total_price) %></td>
			</tr>

		<% end %> <!-- cart line items loop -->

	</table>
	
	